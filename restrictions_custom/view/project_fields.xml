<?xml version="1.0" encoding="utf-8"?>
<odoo>

<record id="proj_fields" model="ir.ui.view" >
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.edit_project"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='tag_ids']" position="after">
                    
                      <field name="proj_value"/>
                      <field name="Received_Client_Payment"/>
                      <field name="proj_loc"/>
                     
                      
                      
                 </xpath> 
                  
            </field>
</record>


<record id="custom_field_domain_stock_inherit" model="ir.ui.view">
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='move_ids_without_package']/tree/field[@name='product_id']" position="attributes">
                      <attribute name="domain">[('qty_available','>',0)]</attribute>
                 </xpath>
                 


            </field>
        </record>


       <record id="percentage_field" model="ir.ui.view" >
            <field name="model">account.payment.register</field>
            <field name="inherit_id" ref="account.view_account_payment_register_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='communication']" position="after">
                    
                      <field name="percentage"/>
                               
                 </xpath> 
                  
            </field>
</record>


<record id="account_payment_form_ext" model="ir.ui.view">
        <field name="name">account_payment</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
           
            <xpath expr="//field[@name='partner_bank_id']" position="after">
                <field name="percentage"/>
            </xpath>
        </field>
    </record>


<record id="custom_fields_project_lv" model="ir.ui.view">
            <field name="name">custom.view.project.lv</field>
            <field name="model">purchase.requisition</field>
            <field name="inherit_id" ref="purchase_requisition.view_purchase_requisition_tree" />
            <field name="arch" type="xml">
                <field name="user_id" position="after">
                    <field name="project_plv" />
                    
            </field>
                
            </field>
        </record>



</odoo>
