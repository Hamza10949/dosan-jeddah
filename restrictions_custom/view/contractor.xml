<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="show_field_contractor" model="ir.ui.view">
            <field name="name">purchase.requisition.form</field>
            <field name="model">purchase.requisition</field>
            <field name="inherit_id" ref="purchase_requisition.view_purchase_requisition_form" />
            <field name="arch" type="xml">
            <xpath expr="//field[@name='account_analytic_id']" position="after">

                <field name="contractor"  />
                
            </xpath>
            
        
            
            </field>
        </record>

<record id="custom_fields_tree_project_slv" model="ir.ui.view">
            <field name="name">custom.treeview.project.slv</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_kpis_tree" />
            <field name="arch" type="xml">
                <field name="user_id" position="after">
                    <field name="project_slv" />
                    
            </field>
                
            </field>
        </record>


<record id="custom_fields_tree_approvers_plv" model="ir.ui.view">
            <field name="name">custom.treeview.approver.plv</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_kpis_tree" />
            <field name="arch" type="xml">
                <field name="project_slv" position="after">
                    <field name="approval_history_lv" />
                    
            </field>
                
            </field>
        </record>

   


</odoo>