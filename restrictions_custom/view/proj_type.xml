<?xml version="1.0" encoding="utf-8"?>
<odoo>

<record id="proj_type_sitereq_inherit" model="ir.ui.view">
            <field name="name">purchase.requisition.inherit.form</field>
            <field name="model">purchase.requisition</field>
            <field name="inherit_id" ref="purchase_requisition.view_purchase_requisition_form"/>
            <field name="arch" type="xml">
                  <xpath expr="//field[@name='currency_id']" position="after">
                       <field name="sitereq_proj_type"/>
                    </xpath>
        </field>
    </record>

<record id="proj_type_po_inherit" model="ir.ui.view">
            <field name="name">purchase.order.inherit.form</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                  <xpath expr="//field[@name='po_type']" position="after">
                       <field name="po_proj_type"/>


                    </xpath>
        </field>
    </record>

</odoo>