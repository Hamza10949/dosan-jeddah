<?xml version="1.0" encoding="utf-8"?>
<odoo>

<record id="project_type_form_view" model="ir.ui.view">
        <field name="name">project.type.form.view</field>
        <field name="model">project.type.custom</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>                          
                            <field name="proj_type_name"/>                         
                        </group>
                    </group>
                    
                </sheet>
            </form>
        </field>
    </record>


<record id="project_type_tree" model="ir.ui.view">
        <field name="name">project.type.form.list</field>
        <field name="model">project.type.custom</field>
        <field name="arch" type="xml">
            <tree>
                <field name="proj_type_name"/>
                
            </tree>
        </field>
    </record>

<record id="project_type_custom" model="ir.actions.act_window">
        <field name="name">Project Type</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">project.type.custom</field>
        <field name="view_mode">tree,form</field>


    </record>

    <menuitem id="project_type" name="Project Type" sequence="2" parent="project.menu_projects" action="project_type_custom" />


</odoo>